<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/offset_16"
    android:layout_marginTop="@dimen/offset_20"
    android:layout_marginEnd="@dimen/offset_16"
    android:layout_marginBottom="@dimen/offset_10"
    android:background="@drawable/bg_rounded_item_white"
    android:elevation="@dimen/offset_4"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPhotoLeague"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_marginStart="@dimen/offset_6"
            android:layout_marginTop="@dimen/offset_6"
            android:layout_marginBottom="@dimen/offset_6"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_rounded_photo"
            android:scaleType="centerCrop"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/offset_12"
            android:paddingTop="@dimen/offset_16"
            android:paddingEnd="0dp">

            <TextView
                android:id="@+id/tvNameLeague"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/headline_3"
                android:textStyle="bold"
                tools:text="Турция 2020" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSlugLeague"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/offset_8"
                    android:text="argentine-liga-profesional-de-futbol"
                    android:textSize="@dimen/headline_4" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/offset_12"
            android:gravity="center"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_weight="1"
                android:background="@drawable/bg_order_price"
                android:backgroundTint="@color/colorPrimary"
                android:minWidth="100dp"
                android:paddingStart="@dimen/offset_4"
                android:paddingTop="@dimen/offset_8"
                android:paddingEnd="@dimen/offset_4"
                android:paddingBottom="@dimen/offset_8">

                <TextView
                    android:id="@+id/tvAbbrLeague"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/headline_4"
                    android:textStyle="bold"
                    tools:text="abbr" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>